<Page x:Class="SMTP_test.Authorize"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SMTP_test"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Authorize" FontFamily="Cascadia Code">

    <StackPanel>
        <TextBlock Text="Authorize" HorizontalAlignment="Center" FontSize="30"/>
        
        <TextBlock Text="Email" HorizontalAlignment="Center" FontSize="20" Margin="0 40 0 0"/>
        <TextBox x:Name="email" Width="200" Margin="0 5 0 0" HorizontalContentAlignment="Center"/>

        <TextBlock Text="Password" HorizontalAlignment="Center" FontSize="20" Margin="0 5 0 0"/>
        <PasswordBox x:Name="password" Width="200" Margin="0 5" HorizontalContentAlignment="Center"/>

        <Button Content="Submit" Width="200" Click="SubmitButton"/>
    </StackPanel>
</Page>
