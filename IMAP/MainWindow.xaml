<Window x:Class="IMAP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IMAP"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FontFamily="Cascadia Code">
    <DockPanel Margin="20">
        <TextBlock DockPanel.Dock="Top" Text="IMAP prac" HorizontalAlignment="Center" FontSize="20"/>
        <Border BorderThickness="1" BorderBrush="Black">
            <StackPanel>
                <TabControl Name="tabs">
                    <TabItem Header="Authorize" IsSelected="True"/>
                    <TabItem Header="Mail" IsEnabled="False"/>
                </TabControl>
                
                <Frame x:Name="frame"/>
            </StackPanel>
        </Border>
    </DockPanel>
</Window>
